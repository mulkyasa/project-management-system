<%- include('../partials/_navbar.ejs') %>

<!-- Page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4"><%= title %></h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form method="POST">
          <div class="form-group row">
            <div class="col-sm">
              <label for="firstname" class="col-form-label"> First name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="firstname"
                class="form-control"
                name="firstname"
                placeholder="First name"
                value="<%= data.firstname %>"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="lastname" class="col-form-label"> Last name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="lastname"
                class="form-control"
                name="lastname"
                placeholder="Last name"
                value="<%= data.lastname %>"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="email" class="col-form-label"> Email</label>
            </div>
            <div class="col-sm-10">
              <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                placeholder="Email"
                value="<%= data.email %>"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="password" class="col-form-label"> Password</label>
            </div>
            <div class="col-sm-10">
              <input
                type="password"
                id="password"
                class="form-control"
                name="password"
                placeholder="Password"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="position" class="col-form-label">
                Position
              </label>
            </div>
            <div class="col-sm-10">
              <select class="custom-select" id="position" name="position"> 
                <option disabled>Choose position</option>
                <option value="Manager" <%= data.position == 'Manager' ? 'selected' : '' %>>Manager</option>
                <option value="Quality Assurance" <%= data.position == 'Quality Assurance' ? 'selected' : '' %>>Quality Assurance</option>
                <option value="Software Developer" <%= data.position == 'Software Developer' ? 'selected' : '' %>>Software Developer</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <label for="filter-type-job" class="col-form-label col-sm-2 pt-0">
                Type Job
              </label >
              <div class="col-sm-10">
                <div class="form-check mb-2">
                  <input class="form-check-input" id="full-time" type="radio" id="part-time" name="typejob" value="Full Time" <%= data.typejob == true ? 'checked' : '' %>>
                  <label class="form-check-label" for="full-time">
                    Full Time
                  </label>
                </div>
                <div class="form-check mb-2">
                  <input class="form-check-input" id="part-time" type="radio" id="part-time" name="typejob" value="Part Time" <%= data.typejob == false ? 'checked' : '' %>>
                  <label class="form-check-label" for="part-time">
                    Part Time
                  </label>
                </div>
              </div>
            </div>
          </div>
          <button class="btn-sm btn-dark" type="submit">Save data</button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/_footer.ejs') %>