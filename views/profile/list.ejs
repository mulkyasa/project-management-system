<%- include('../partials/_navbar.ejs') %>

<!-- Page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4"><%= title %></h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form action="/profile" method="POST">
          <h3 class="h3 mb-0"><%= data.firstname + ' ' + data.lastname %></h3>
          <p class="mt-0 text-black-50"><%= data.position %></p>
          <hr />
          <div class="form-group row">
            <div class="col-sm">
              <label for="email" class="col-form-label"> Email</label>
            </div>
            <div class="col-sm-10">
              <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                placeholder="Email"
                value="<%= data.email %>"
                disabled
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="password" class="col-form-label"> Password</label>
            </div>
            <div class="col-sm-10">
              <input
                type="password"
                id="password"
                class="form-control"
                name="password"
                placeholder="Password"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="firstname" class="col-form-label"> First name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="firstname"
                class="form-control"
                name="firstname"
                placeholder="First name"
                value="<%= data.firstname %>"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="lastname" class="col-form-label"> Last name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="lastname"
                class="form-control"
                name="lastname"
                placeholder="Last name"
                value="<%= data.lastname %>"
              />
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Position</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="manager"
                    name="position"
                    value="Manager"
                    <%= data.position == 'Manager' ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="manager">
                    Manager
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="software-developer"
                    name="position"
                    value="Software Developer"
                    <%= data.position == 'Software Developer' ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="software-developer">
                    Software Developer
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="quality-assurance"
                    name="position"
                    value="Quality Assurance"
                    <%= data.position == 'Quality Assurance' ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="quality-assurance">
                    Quality Assurance
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Type Job</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="full-time"
                    name="type-job"
                    value="Full Time"
                    <%= data.typejob == true ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="full-time">
                    Full Time
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="part-time"
                    name="type-job"
                    value="Part Time"
                    <%= data.typejob == false ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="part-time">
                    Part Time
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <button class="btn btn-sm btn-dark" type="submit">
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/_footer.ejs') %>
