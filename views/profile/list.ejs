<%- include('../partials/_navbar.ejs') %>

<!-- Page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4">Profile</h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form action="">
          <h3 class="h3 mb-0">Yasa Mulky Al Afgani</h3>
          <p class="mt-0 text-black-50">Software Developer</p>
          <hr />
          <div class="form-group row">
            <div class="col-sm">
              <label for="email" class="col-form-label"> Email</label>
            </div>
            <div class="col-sm-10">
              <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                placeholder="Email"
                disabled
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="password" class="col-form-label"> Password</label>
            </div>
            <div class="col-sm-10">
              <input
                type="password"
                id="password"
                class="form-control"
                name="password"
                placeholder="Password"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="firstname" class="col-form-label"> First name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="firstname"
                class="form-control"
                name="firstname"
                placeholder="First name"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="lastname" class="col-form-label"> Last name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                id="lastname"
                class="form-control"
                name="lastname"
                placeholder="Last name"
              />
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Position</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="manager"
                    name="position"
                    value="Manager"
                    checked
                  />
                  <label class="form-check-label" for="manager">
                    Manager
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="software-developer"
                    name="position"
                    value="Software developer"
                  />
                  <label class="form-check-label" for="software-developer">
                    Software developer
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="quality-assurance"
                    name="position"
                    value="Quality assurance"
                  />
                  <label class="form-check-label" for="quality-assurance">
                    Quality assurance
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Type Job</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="gridRadios1"
                    name="type-job"
                    value="Full Time"
                    checked
                  />
                  <label class="form-check-label" for="gridRadios1">
                    Full Time
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    id="gridRadios2"
                    name="type-job"
                    value="Part Time"
                  />
                  <label class="form-check-label" for="gridRadios2">
                    Part Time
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <button type="button" class="btn btn-sm btn-dark" type="submit">
            Search
          </button>
          <button type="button" class="btn btn-sm btn-default" type="submit">
            Reset
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/_footer.ejs') %>
