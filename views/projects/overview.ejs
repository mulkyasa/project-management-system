<%- include('../partials/_sidebar.ejs') %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="container-fluid">
    <div
      class="chartjs-size-monitor-expand"
      style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"
    >
      <div
        style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"
      ></div>
    </div>
    <div
      class="chartjs-size-monitor-shrink"
      style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"
    >
      <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
    </div>
    <h1 class="display-4 mb-1"><%= title %></h1>
    <p class="h5 mb-4 text-secondary">#<%= result.projectid %> <%= result.name %></p>
    <form action="">
      <div class="row">
        <div class="col">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h3>Issue Tracking</h3>
              <hr />
              <ul class="list-group">
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                Bug<span class="badge-danger badge-pill"><%= bugOpen %> open / <%= bugTotal %></span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                Feature<span class="badge-warning badge-pill"><%= featureOpen %> open / <%= featureTotal %></span>
                </li>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                Support<span class="badge-success badge-pill"><%= supportOpen %> open / <%= supportTotal %></span>
                </li>
              </ul>
              <h3 class="mt-3">Members</h3>
              <hr />
              <div class="row">
                <% membersData.forEach((item) => { %>
                  <div class="col-3">
                    <div class="card mb-4 shadow-sm">
                      <div class="card-body">
                        <ul class="list-group">
                          <h5><%= item.fullname %></h5>
                          <h6 class="text-secondary"><%= item.position %></h6>
                        </ul>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/_footer.ejs') %>
