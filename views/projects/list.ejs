<%- include('../partials/_navbar.ejs') %>
<!-- Page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4"><%= title %></h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form action="">
          <h3 class="h3 mb-3">Filters</h3>
          <hr />
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-id" class="col-form-label">
                <input type="checkbox" id="filter-id" name="filter-id" /> ID
              </label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="filter-id"
                placeholder="ID"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-name" class="col-form-label">
                <input type="checkbox" id="filter-name" name="filter-name" />
                Name
              </label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="filter-name"
                placeholder="Name"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-member" class="col-form-label">
                <input
                  type="checkbox"
                  id="filter-member"
                  name="filter-member"
                />
                Member
              </label>
            </div>
            <div class="col-sm-10">
              <select class="custom-select">
                <option selected>Choose member</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </div>
          <button type="button" class="btn btn-sm btn-dark" type="submit">
            Search
          </button>
          <button type="button" class="btn btn-sm btn-default" type="submit">
            Reset
          </button>
        </form>
      </div>
    </div>
    <div class="shadow-sm card mt-3">
      <div class="card-body">
        <h3 class="h3 mb-3">Option</h3>
        <hr />
        <div class="form-group row">
          <div class="col-sm-2">Columns</div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-id"
                name="check-id"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-id">
                ID
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-name"
                name="check-name"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-name">
                Name
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-member"
                name="check-member"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-member">
                Member
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-dark" type="submit">
              Apply
            </button>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-sm">
            <table class="table table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col-sm">ID</th>
                  <th scope="col-sm">Name</th>
                  <th scope="col-sm">Member</th>
                  <th scope="col-sm">Action</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach((item) => { %>
                  <tr class="table-row" data-href="/projects/overview">
                    <th scope="row"><%= item.projectid %></th>
                    <td><%= item.name %></td>
                    <td><%= item.membersname %></td>
                    <td>
                      <a href="/projects/edit">
                        <button
                          type="button"
                          class="btn btn-sm btn-success"
                          type="submit"
                        >
                          Edit
                        </button>
                      </a>
                      <button
                        type="button"
                        class="btn btn-sm btn-danger"
                        type="submit"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <a class="page-link text-dark" href="#">Previous</a>
            </li>
            <li class="page-item">
              <a class="page-link text-dark" href="#">1</a>
            </li>
            <li class="page-item">
              <a class="page-link text-dark" href="#">2</a>
            </li>
            <li class="page-item">
              <a class="page-link text-dark" href="#">3</a>
            </li>
            <li class="page-item">
              <a class="page-link text-dark" href="#">Next</a>
            </li>
          </ul>
        </nav>
        <a href="/projects/add">
          <button type="submit" class="btn btn-sm btn-dark">Add data</button>
        </a>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/_footer.ejs') %>
