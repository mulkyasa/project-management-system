<%- include('../partials/_navbar.ejs') %>
<!-- Page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4"><%= title %></h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form method="GET">
          <input type="hidden" id="page" name="page" value="1" />
          <h3 class="h3 mb-3">Filters</h3>
          <hr />
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-id" class="col-form-label">
                <input type="checkbox" id="filter-id" name="checkId" /> ID
              </label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="inputId"
                placeholder="ID"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-name" class="col-form-label">
                <input type="checkbox" id="filter-name" name="checkName" />
                Name
              </label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="inputName"
                placeholder="Name"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-member" class="col-form-label">
                <input
                  type="checkbox"
                  id="filter-member"
                  name="checkMember"
                />
                Member
              </label>
            </div>
            <div class="col-sm-10">
              <select class="custom-select" name="inputMember">
                <option selected>Choose member</option>
                <% usersData.forEach((item) => { %>
                  <option value="<%= item.userid %>"><%= item.fullname %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <button class="btn btn-sm btn-dark" type="submit">
            Search
          </button>
          <a href="/projects">
            <button class="btn btn-sm btn-default" type="submit">
              Reset
            </button>
          </a>
        </form>
      </div>
    </div>
    <div class="shadow-sm card mt-3">
      <div class="card-body">
        <h3 class="h3 mb-3">Option</h3>
        <hr />
        <div class="form-group row">
          <div class="col-sm-2">Columns</div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-id"
                name="check-id"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-id">
                ID
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-name"
                name="check-name"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-name">
                Name
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="check-member"
                name="check-member"
                value="true"
                checked
              />
              <label class="form-check-label" for="check-member">
                Member
              </label>
            </div>
          </div>
          <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-dark" type="submit">
              Apply
            </button>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-sm">
            <table class="table table-hover">
              <thead class="thead-light">
                <tr>
                  <th scope="col-sm">ID</th>
                  <th scope="col-sm">Name</th>
                  <th scope="col-sm">Member</th>
                  <th scope="col-sm">Action</th>
                </tr>
              </thead>
              <tbody>
                <% data.forEach((item) => { %>
                  <tr class="table-row" data-href="/projects/overview">
                    <th scope="row"><%= item.projectid %></th>
                    <td><%= item.name %></td>
                    <td><%= item.membersname %></td>
                    <td>
                      <a href="/projects/edit/<%= item.projectid %>">
                        <button
                          type="button"
                          class="btn btn-sm btn-success"
                          type="submit"
                        >
                          Edit
                        </button>
                      </a>
                      <a href="/projects/delete/<%= item.projectid %>">
                        <button
                          type="button"
                          class="btn btn-sm btn-danger"
                          type="submit"
                        >
                          Delete
                        </button>
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item<%= page == 1 ? ' disabled' : '' %>">
              <a
                class="page-link"
                href="/projects<%= link.replace(`page=${page}`, `page=${parseInt(page) - 1}`) %>"
                >Previous</a
              >
            </li>
            <% for(let i = 1; i <= pages; i++) { %>
            <li class="page-item<%= i == page ? ' active' : '' %>">
              <a
                class="page-link"
                href="/projects<%= link.replace(`page=${page}`, `page=${i}`) %>"
                ><%= i %></a
              >
            </li>
            <% }; %>
            <li class="page-item<%= page == pages ? ' disabled' : '' %>">
              <a
                class="page-link"
                href="/users<%= link.replace(`page=${page}`, `page=${parseInt(page) + 1}`) %>"
                >Next</a
              >
            </li>
          </ul>
        </nav>
        <a href="/projects/add">
          <button type="submit" class="btn btn-sm btn-dark">Add data</button>
        </a>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/_footer.ejs') %>
