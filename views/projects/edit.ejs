<%- include('../partials/_navbar.ejs') %>
<main role="main" class="flex-shrink-0">
  <div class="container">
    <h1 class="display-4 mb-4"><%= title %></h1>
    <div class="shadow-sm card">
      <div class="card-body">
        <form method="POST">
          <h3 class="h3 mb-3">Forms</h3>
          <hr />
          <% if(projectsMessage.length > 0) { %>
            <div class="alert alert-danger" role="alert">
              <%= projectsMessage %>
            </div>
            <% }; %>
          <div class="form-group row">
            <div class="col-sm">
              <label for="filter-name" class="col-form-label">Name</label>
            </div>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Project Name"
                value="<%= projects[0].name %>"
              />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2">Members</div>
            <div class="col-sm">
              <% users.forEach((item) => { %>
                <div class="form-check mb-2">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="<%= item.userid %>"
                    name="member"
                    value="<%= item.userid %>, '<%= item.position %>' %>"
                    <%= members.includes(item.userid) ? 'checked' : '' %>
                  />
                  <label class="form-check-label" for="<%= item.userid %>">
                    <%= item.fullname %>
                  </label>
                </div>
              <% }); %>
            </div>
          </div>
          <button class="btn btn-sm btn-dark" type="submit">Save data</button>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/_footer.ejs') %>
